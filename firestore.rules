rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // ğŸ” ìš”ê¸ˆ ì—†ì´ ê´€ë¦¬ì íŒë³„ (config/admins ë¬¸ì„œ ì¡´ì¬ ì—¬ë¶€)
    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/config/main/admins/$(request.auth.uid));
    }

    // ì ‘ìˆ˜
    match /receptions/{docId} {
      allow read, create, update, delete: if isSignedIn();
    }

    // ìƒë‹´
    match /consultations/{doc} {
      allow read, write: if isSignedIn();
    }

    // ì‚¬ìš©ì
    match /users/{uid} {
      // ê´€ë¦¬ì: ì „ì²´ ì¡°íšŒ(ë¦¬ìŠ¤íŠ¸ í¬í•¨)
      allow read: if isAdmin();

      // ì¼ë°˜ ì‚¬ìš©ì: ë³¸ì¸ ë¬¸ì„œ ë‹¨ê±´ ì¡°íšŒ
      allow get: if isSignedIn() && request.auth.uid == uid;

      // ìƒì„±: ë³¸ì¸ ë¬¸ì„œë§Œ
      allow create: if isSignedIn() && request.auth.uid == uid;

      // ìˆ˜ì •: ê´€ë¦¬ì ë˜ëŠ” ë³¸ì¸
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == uid);

      // ì‚­ì œ: ê´€ë¦¬ìë§Œ
      allow delete: if isAdmin();
    }

    // ê´€ë¦¬ì ì„¤ì • ë¬¸ì„œ
    match /config/{docId} {
      allow read, write: if isAdmin();
      match /admins/{adminUid} {
        allow read, write: if isAdmin();
      }
    }

    // ê¸°ë³¸ ê±°ë¶€
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
